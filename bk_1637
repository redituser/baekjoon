//소요시간 40분

package bk_1637;

import java.util.Scanner;


public class Main {
	public static void main(String[] args) {
		//치킨
		Scanner sc = new Scanner(System.in);
		int arr[] = new int[2];
		
		
		while(sc.hasNextInt()) {
		
		for (int i = 0; i < arr.length; i++) {
			arr[i] = sc.nextInt();
		}
			
		
		int n = arr[0];
		int k = arr[1];
		int h = n / k;
		int c = (n % k + h)/k;	
		
		System.out.println(n + h + c);
		
		}
		
		
	}

}
